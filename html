    <script>
        // set year in footer
        document.getElementById('year').textContent = new Date().getFullYear();

        function handleBooking(e) {
            e.preventDefault();
            const to = 'hj.rousseau06@gmail.com';
            const name = document.getElementById('fname').value.trim();
            const email = document.getElementById('email').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const service = document.getElementById('service').value;
            const datetime = document.getElementById('datetime').value;
            const msg = document.getElementById('msg').value.trim();

            if (!name || !email || !phone) {
                alert('Please fill name, email, and phone.');
                return false;
            }

            // build an email body
            let body = '';
            body += 'Booking request from website%0D%0A';
            body += '---------------------------%0D%0A';
            body += 'Name: ' + encodeURIComponent(name) + '%0D%0A';
            body += 'Email: ' + encodeURIComponent(email) + '%0D%0A';
            body += 'Phone: ' + encodeURIComponent(phone) + '%0D%0A';
            body += 'Service: ' + encodeURIComponent(service) + '%0D%0A';
            body += 'Preferred date/time: ' + encodeURIComponent(datetime) + '%0D%0A';
            body += 'Bike / Notes: ' + encodeURIComponent(msg) + '%0D%0A%0D%0A';
            body += 'Address: 1206 Brantford Ave, Silver Spring, MD 20904%0D%0A';

            // subject
            const subject = encodeURIComponent('Appointment request — ' + name + ' — ' + service);

            // mailto
            const mailto = 'mailto:' + to + '?subject=' + subject + '&body=' + body;

            // open in user's mail client
            window.location.href = mailto;
            return false;
        }
    </script>
